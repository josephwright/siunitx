      \test:nn { number } { 123 }
      \test:nn { unit } { \mathrm{kg} }
      \keys_set:nn { siunitx } { number-mode = match }
      \test:nn { number } { 123 }
      \test:nn { unit } { \mathrm{kg} }
    \group_end:
