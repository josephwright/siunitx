\TEST { Printing~math~choice }
  {
    \keys_set:nn { siunitx } { fraction-function = \frac }
    \test:nn { unit }
      {
        \mathchoice
          { \frac { \mathrm { kJ } } { \mathrm { mol } } }
          { \mathrm { kJ } \, \mathrm { mol } ^ { -1 } }
          { \mathrm { kJ } \, \mathrm { mol } ^ { -1 } }
          { \mathrm { kJ } \, \mathrm { mol } ^ { -1 } }
      }
  }

